                    <a class="navbar-brand" style="margin-left:5px;" href="/VMS/History">History<span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item active">
                    <a class="navbar-brand" style="margin-left:5px;" href="/VMS/Report">Report<span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item active">
                    <a class="navbar-brand" style="margin-left:5px;" href="/ConfigurationPage">Configuration<span class="sr-only">(current)</span></a>
                </li>
            </ul>
        </div>
        <div class="text-right">
            @if (User.IsAuthenticated())
            {
                <form asp-page="/Logout" method="post">
                    <button type="submit" class="btn btn-secondary">Logout</button>
                </form>
            }
        </div>
    </nav>
</header>
<div>
    @RenderBody()
</div>

