    ViewData["Title"] = "Delete";
}

<style>
    h1,h3 {
    margin-left: 10px;
    margin-bottom: 25px;
        color: snow;
    }

    .main {
        margin-left: 10px;
        color: white;
        font-size: 20px;
    }
</style>

<h1>Delete</h1>

